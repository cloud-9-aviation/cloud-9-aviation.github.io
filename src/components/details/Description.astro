---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

const { overview, features, images, equipmentSummary, equipmentDetails } =
  Astro.props;
---

<div class="grid-cols-1 lg:grid-cols-3 px-6 gap-4 grid">
  <div class="col-span-2">
    <h2 class="text-2xl font-bold pt-4">Overview</h2>
    {overview.map((text) => <p class="py-4">{text}</p>)}
    <h2 class="text-2xl font-bold">Features</h2>
    <ul class="py-4">
      {
        features.map((feature) => (
          <li class="flex items-center gap-2 p-2 even:bg-sky-100">
            <Icon name={feature.icon} />
            <strong>{feature.label}</strong>

            {feature.link ? (
              <a
                href={feature.link}
                target="_blank"
                class="font-semibold text-sky-600 flex items-center gap-1"
              >
                {feature.text}
                <Icon name="mdi:open-in-new" />
              </a>
            ) : (
              feature.value
            )}
          </li>
        ))
      }
    </ul>
    <h2 class="text-2xl font-bold">Equipment & Avionics</h2>
    {equipmentSummary.map((text) => <p class="py-4">{text}</p>)}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 py-4">
      {
        equipmentDetails.map((item, index) => (
          <div>
            <h3 class="text-xl font-bold">{item.name}</h3>
            <div>
              <Image
                src={item.image}
                alt={`${item.name} Photo`}
                class="w-full sm:w-auto object-contain my-2"
              />
              <div class="px-4 text-sm">
                <p>{item.description}</p>
                <p class="pt-2">
                  <a
                    href={item.link}
                    target="_blank"
                    class="text-sky-600 flex items-center gap-1"
                  >
                    {item.text} <Icon name="mdi:open-in-new" />
                  </a>
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <div class="gap-2 pt-4">
    {
      images.map((image) => (
        <Image
          src={image.image}
          alt={image.alt}
          class="w-full h-auto rounded-lg shadow mb-4"
        />
      ))
    }
  </div>
</div>
